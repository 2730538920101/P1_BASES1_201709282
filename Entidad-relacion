classDiagram
direction BT
class CATEGORIAS {
   varchar(100) nombre
   int id_categoria
}
class CLIENTES {
   varchar(100) nombre
   varchar(100) apellido
   varchar(500) direccion
   bigint telefono
   bigint tarjeta
   int edad
   double salario
   varchar(1) genero
   int fk_id_pais
   int id_cliente
}
class DETALLE_ORDEN {
   int linea_orden
   int fk_id_producto
   int cantidad
   int fk_id_vendedor
   int fk_id_orden
   int id_detalle
}
class ORDENES {
   date fecha_orden
   int fk_id_cliente
   int id_orden
}
class PAISES {
   varchar(100) nombre
   int id_pais
}
class PRODUCTOS {
   varchar(100) nombre
   double precio
   int fk_id_categoria
   int id_producto
}
class TEMPORAL_ORDENES {
   int id_orden
   int linea_orden
   date fecha_orden
   int id_cliente
   int id_vendedor
   int id_producto
   int cantidad
}
class VENDEDORES {
   varchar(100) nombre
   int fk_id_pais
   int id_vendedor
}

CLIENTES  -->  PAISES : fk_id_pais:id_pais
DETALLE_ORDEN  -->  ORDENES : fk_id_orden:id_orden
DETALLE_ORDEN  -->  PRODUCTOS : fk_id_producto:id_producto
DETALLE_ORDEN  -->  VENDEDORES : fk_id_vendedor:id_vendedor
ORDENES  -->  CLIENTES : fk_id_cliente:id_cliente
PRODUCTOS  -->  CATEGORIAS : fk_id_categoria:id_categoria
VENDEDORES  -->  PAISES : fk_id_pais:id_pais
